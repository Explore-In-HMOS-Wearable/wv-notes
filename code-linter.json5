{
  "files": [
    "**/*.ets"
  ],
  "ignore": [
    "**/src/ohosTest/**/*",
    "**/src/test/**/*",
    "**/src/mock/**/*",
    "**/node_modules/**/*",
    "**/oh_modules/**/*",
    "**/build/**/*",
    "**/.preview/**/*"
  ],
  "ruleSet": [
    "plugin:@performance/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "@hw-stylistic/curly": 2,
    "@hw-stylistic/indent": 2,
    "@hw-stylistic/keyword-spacing": 2,
    "@hw-stylistic/max-len": 2,
    "@hw-stylistic/no-multi-spaces": 2,
    "@hw-stylistic/no-tabs": 2,
    "@hw-stylistic/object-property-newline": 2,
    "@hw-stylistic/one-var-declaration-per-line": 2,
    "@hw-stylistic/operator-linebreak": 2,
    "@hw-stylistic/quotes": 2
  },

}
